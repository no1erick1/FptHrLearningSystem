<style>
    .form-material .form-primary .form-control:focus ~ .form-bar:after, .form-material .form-primary .form-control:focus ~ .form-bar:before {
        background: #f37125;
    }

    .form-material .form-primary .form-control:focus ~ label {
        color: #f37125;
    }

    body[themebg-pattern="theme1"] {
        background-color: /*#f05123*/ #f37125;
    }

    .btn-md {
        padding: 10px 16px;
        font-size: 15px;
        line-height: 23px;
        background-color: #f05123;
    }
    /*check*/
    .checkbox-fade.fade-in-primary .cr, .checkbox-fade.zoom-primary .cr, .checkbox-zoom.fade-in-primary .cr, .checkbox-zoom.zoom-primary .cr {
        border: 2px solid #f05123;
    }

    .icofont-ui-check:before {
        content: "\ed27";
        color: #f05123;
    }

    .btn-primary, .sweet-alert button.confirm, .wizard > .actions a {
        background-color: #f05123;
        border-color: #333;
        color: #fff;
        cursor: pointer;
        -webkit-transition: all ease-in 0.3s;
        transition: all ease-in 0.3s;
    }

        .btn-primary:hover, .sweet-alert button.confirm:hover, .wizard > .actions a:hover {
            background-color: #f37125;
            border-color: #f37125;
        }

    a:focus, a:hover {
        text-decoration: none;
        color: #f37125;
    }

    .btn-primary:focus, .sweet-alert button.confirm:focus, .wizard > .actions a:focus {
        -webkit-box-shadow: none;
        box-shadow: none;
        color: #fff;
        background-color: #f37125;
    }

    .m-t-30 {
        margin-top: 20px;
    }
</style>
<body themebg-pattern="theme1">
    <!-- Pre-loader start -->
    <div class="theme-loader">
        <div class="loader-track">
            <div class="preloader-wrapper">
                <div class="spinner-layer spinner-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>

                <div class="spinner-layer spinner-yellow">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>

                <div class="spinner-layer spinner-green">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pre-loader end -->

    <section class="login-block">
        <!-- Container-fluid starts -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->

                    <section id="loginForm">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "md-float-material form-material", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="text-center">
                                <img src="~/Content/Assets/images/logoGW.png" style="padding-right: 10px; width:130px" alt="logo.png">
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="auth-box card">
                                <div class="card-block">
                                    <div class="row m-b-20">
                                        <div class="col-md-12">
                                            <h3 class="text-center">Change Your's Password</h3>
                                        </div>
                                    </div>
                                    <div class="form-group form-primary">
                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                        <span class="form-bar"></span>
                                        @Html.LabelFor(m => m.OldPassword, new { @class = "float-label" })
                                    </div>
                                    <div class="form-group form-primary">
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                        <span class="form-bar"></span>
                                        @Html.LabelFor(m => m.NewPassword, new { @class = "float-label" })
                                    </div>
                                    <div class="form-group form-primary">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        <span class="form-bar"></span>
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "float-label" })
                                    </div>
                                    
                                    <div class="row m-t-30">
                                        <div class="col-md-12">
                                            <button type="submit" value="Change password" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Change Password</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </section>
                    <!-- end of form -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container-fluid -->
    </section>
